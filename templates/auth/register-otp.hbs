<table role="presentation" border="0" cellpadding="0" cellspacing="0" width="100%">
    <tr>
        <td align="center">
            <h1 style="margin: 0 0 16px 0; font-size: 28px; font-weight: 700; color: #1e293b; line-height: 1.2;">Welcome to {{ app_settings.name }}</h1>
        </td>
    </tr>
    <tr>
        <td>
            <p style="margin: 0 0 16px 0; font-size: 16px; line-height: 1.6; color: #475569;">Thank you for registering. Please verify your email address using the code below.</p>
        </td>
    </tr>
</table>

<!-- Code Box -->
<table role="presentation" border="0" cellpadding="0" cellspacing="0" width="100%" style="margin: 32px 0;">
    <tr>
        <td align="center" style="background: linear-gradient(135deg, #f5f3ff 0%, #ede9fe 100%); border: 2px dashed #a78bfa; border-radius: 16px; padding: 32px 24px;">
            <p style="margin: 0 0 12px 0; font-size: 12px; font-weight: 700; color: #7c3aed; text-transform: uppercase; letter-spacing: 1.5px;">Verification Code</p>
            <p style="margin: 12px 0; font-size: 40px; font-weight: 900; letter-spacing: 8px; color: #6366f1; font-family: 'Courier New', monospace;">{{ otp }}</p>
            <p style="margin: 12px 0 0 0; font-size: 13px; color: #6b7280; font-weight: 500;">Valid for 15 minutes</p>
        </td>
    </tr>
</table>

<!-- Warning Alert -->
<table role="presentation" border="0" cellpadding="0" cellspacing="0" width="100%" style="margin: 24px 0;">
    <tr>
        <td style="background: #fffbeb; border-left: 4px solid #f59e0b; padding: 20px 24px; border-radius: 12px;">
            <p style="margin: 0 0 4px 0; font-size: 16px; font-weight: 600; color: #92400e;">Didn't sign up?</p>
            <p style="margin: 4px 0 0 0; font-size: 15px; line-height: 1.6; color: #92400e;">If you didn't create this account, you can safely ignore this email.</p>
        </td>
    </tr>
</table>
